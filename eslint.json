// http://bl.ocks.org/cletusw/e01a85e399ab563b1236 for more info :)
{
    "ecmaFeatures": {
        "arrowFunctions": true,
        "forOf": true,
        "blockBindings": true,
        "classes": true,
        "defaultParams": true,
        "destructuring": true,
        "modules": true,
        "restParams": true,
        "spread": true,
        "generators": false,
        "objectLiteralComputedProperties": true,
        "objectLiteralShorthandMethods": true,
        "objectLiteralShorthandProperties": true,
        "jsx": true
    },
    "parser": "babel-eslint",
    "rules": {
        "strict": 0,
        "no-underscore-dangle": 0,
        "no-multi-spaces": 0,
        "key-spacing": 0,
        "no-return-assign": 0,
        "consistent-return": 0,
        "no-shadow": 0,
        "comma-dangle": 0,
        "eol-last": 0,
        "no-use-before-define": 0,
        "no-empty": 0,
        "new-parens": 0,
        "no-cond-assign": 0,
        "no-fallthrough": 0,
        "new-cap": 0,
        "no-loop-func": 0,
        "no-unreachable": 0,
        "no-process-exit": 0,
        "no-console": 0,
        "no-unused-vars": 0,
        "quotes": [
            1,
            "single",
            "avoid-escape"
        ],
        "vars-on-top": 0,
        "curly": 1,
        "eqeqeq": 1,
    },
    "env": {
        "browser": true,
        "es6": true
    }
}
